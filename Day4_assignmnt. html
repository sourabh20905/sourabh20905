<script>
function compare()
{
a=parseInt(first.value);
b=parseInt(second.value);
c=parseInt(third.value);
if(a>b&&a>c)d=a
else if(b>a&&b>c )d=b
else  d=c
out.value="The Largest Among Three number "+a+"  ,  "+b+"  ,  "+c+"  is "+d 
}
